{
  "compilerOptions": {
    "target": "esnext",
    "types": [
      "expo-camera"
    ],
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/__rsc_tests__/*"
  ],
  "extends": "expo/tsconfig.base"
}
